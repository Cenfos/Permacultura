---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts'); // Asegúrate de que 'posts' es el nombre de tu colección en Tina
  return posts.map(post => ({
    params: { slug: post.slug }, // Asegúrate de que 'slug' es el nombre del campo en tu colección
  }));
}

const { slug } = Astro.params;
const posts = await getCollection('posts'); // Nuevamente, obtener la colección de TinaCMS

const post = posts.find(p => p.slug === slug);
---

<Layout title={post.title}>
  <article>
    <h1>{post.title}</h1>
    <p>{post.body}</p> <!-- Asegúrate de que 'body' es el campo correcto para el contenido -->
  </article>
</Layout>

<style>
  article {
    max-width: 800px;
    margin: 0 auto;
  }
  h1 {
    color: var(--color-primary);
    margin-bottom: 1rem;
  }
</style>
